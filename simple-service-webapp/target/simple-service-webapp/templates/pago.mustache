<!DOCTYPE html>
<html>
  <head>
    <title>Pago</title>
    <style>
      .row {
        line-height: 2;
      }
      .header {
        font-weight: bold;
      }
      .col {
        float: left;
        width: 16%;
      }
      .toolbar {
        margin-bottom: 20px;
      }
      .info {
        font-style: italic;
      }
        input, select{
                margin-bottom: 15px;
        }
    </style>
  </head>
  <body>
    <h2>Pago</h2>
    <form action="/simple-service-webapp/micro/compra/pago/final" method="POST">
        <label>Evento</label>
        <input id="evento" name="evento" value="{{evento.nombre}}" readonly/></br>
        <label>Lugar</label>
        <input id="lugar" name="lugar" value="{{evento.lugar.nombre}}" readonly/></br>
        <label>Categoría de asiento</label>
        <input id="categoria" name="categoria" value="{{categoria}}" readonly/></br>
        <label>Número de asientos</label>
        <input id="num_asientos" name="num_asientos" value="{{num_asientos}}" readonly></br>
        <label>Tipo de pago</label>
        <select id="tipo_pago" name="tipo_pago" required>
            <option value="debito">Tarjeta de débito</option>
            <option value="credito">Tarjeta de crédito</option>
        </select>
        <label>Costo final</label>
        <input id="total" name="total" value="{{total}}" readonly></br>

        <input type="hidden" id="evento_id" name="evento_id" value="{{evento.id}}">
        <input type="submit" value="Comprar"/>
        <input type="button" onclick="location.href='/simple-service-webapp/micro/eventos'" value="Cancelar">
    </form>
  </body>
</html>